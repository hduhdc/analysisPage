{
  "name": "webpack-code-comments-analysis-plugin",
  "version": "0.0.0",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.mjs",
  "typings": "./types/index.d.ts",
  "scripts": {
    "build:plugin": "vite build",
    "build:loader": "vite build --config vite.loader.config.ts",
    "build:inject": "vite build --config vite.inject-loader.config.ts",
    "build": "tsc && pnpm build:plugin && pnpm build:loader && pnpm build:inject",
    "pub": "pnpm publish",
    "pub:beta": "pnpm publish --tag beta"
  },
  "files": [
    "dist",
    "types"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./types/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./types/index.d.ts",
        "default": "./dist/index.umd.js"
      }
    }
  },
  "repository": "",
  "author": "",
  "license": "MIT",
  "homepage": "",
  "description": "",
  "keywords": [
    "webpack",
    "vite",
    "plugin",
    "vue",
    "vscode",
    "analysis"
  ],
   
  "dependencies": {
    "code-comments-analysis-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "typescript": "^4.9.3",
    "vite": "^4.3.9"
  }
}
